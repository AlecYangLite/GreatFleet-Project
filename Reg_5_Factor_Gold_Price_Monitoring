        " import yfinance as yf\n",
        "import pandas as pd\n",
        "from datetime import datetime\n",
        "import numpy as np\n",
        "from sklearn.linear_model import LinearRegression\n",
        "\n",
        "# 1ï¸âƒ£ è·å–å¤šå› å­æ•°æ®\n",
        "start_date = \"2015-01-01\"\n",
        "today = datetime.today().strftime('%Y-%m-%d')\n",
        "\n",
        "# ä¸‹è½½å†å²æ•°æ®\n",
        "gc = yf.download('GC=F', start=start_date, end=today)[['Close']].rename(columns={'Close': 'GC=F'})\n",
        "dxy = yf.download('DX-Y.NYB', start=start_date, end=today)[['Close']].rename(columns={'Close': 'DXY'})\n",
        "vix = yf.download('^VIX', start=start_date, end=today)[['Close']].rename(columns={'Close': 'VIX'})\n",
        "sp500 = yf.download('^GSPC', start=start_date, end=today)[['Close']].rename(columns={'Close': 'SP500'})\n",
        "tip = yf.download('TIP', start=start_date, end=today)[['Close']].rename(columns={'Close': 'TIP'})  # CPI Proxy\n",
        "\n",
        "# åˆå¹¶æˆå¤šå› å­ DataFrame\n",
        "data = gc.join([tip, dxy, vix, sp500], how='inner').dropna()\n",
        "\n",
        "# 2ï¸âƒ£ æ„å»ºå›å½’æ¨¡å‹ï¼ˆç”¨å†å²æ•°æ®æ‹Ÿåˆåˆç†ä»·æ ¼ï¼‰\n",
        "X = data[['TIP', 'DXY', 'VIX', 'SP500']]\n",
        "y = data['GC=F']\n",
        "reg_model = LinearRegression().fit(X, y)\n",
        "\n",
        "# 3ï¸âƒ£ è·å–ä»Šæ—¥æœ€æ–°å› å­å€¼\n",
        "latest_factors = pd.DataFrame({\n",
        "    'TIP': [tip.iloc[-1, 0]],\n",
        "    'DXY': [dxy.iloc[-1, 0]],\n",
        "    'VIX': [vix.iloc[-1, 0]],\n",
        "    'SP500': [sp500.iloc[-1, 0]]\n",
        "})\n",
        "\n",
        "# 4ï¸âƒ£ è®¡ç®—ä»Šæ—¥åˆç†ä»·æ ¼\n",
        "today_fair_price = reg_model.predict(latest_factors)[0].item()\n",
        "today_actual_price = gc.iloc[-1, 0]\n",
        "\n",
        "# 5ï¸âƒ£ è®¡ç®—åç¦»ç™¾åˆ†æ¯”\n",
        "deviation_pct = ((today_actual_price - today_fair_price) / today_fair_price) * 100\n",
        "\n",
        "# 6ï¸âƒ£ ç³»ç»Ÿè‡ªåŠ¨å»ºè®®\n",
        "if deviation_pct > 3:\n",
        "    suggestion = \"âš  å½“å‰ä»·æ ¼åé«˜ï¼Œå»ºè®®è°¨æ…æˆ–é€¢é«˜å‡ä»“ã€‚\"\n",
        "elif deviation_pct < -3:\n",
        "    suggestion = \"âœ… å½“å‰ä»·æ ¼åä½ï¼Œè€ƒè™‘é€¢ä½å¸ƒå±€ã€‚\"\n",
        "else:\n",
        "    suggestion = \"âœ” å½“å‰ä»·æ ¼åˆç†ï¼Œå»ºè®®è§‚æœ›ã€‚\"\n",
        "\n",
        "# 7ï¸âƒ£ è¾“å‡ºç»“æœ\n",
        "print(\"ğŸ“Š é»„é‡‘ä»·æ ¼åˆç†æ€§ç›‘æ§ç»“æœ:\")\n",
        "print(f\"ä»Šæ—¥é»„é‡‘ç°ä»·: {today_actual_price:.2f} USD\")\n",
        "print(f\"æ¨¡å‹è®¡ç®—åˆç†ä»·æ ¼: {today_fair_price:.2f} USD\")\n",
        "print(f\"åç¦»ç™¾åˆ†æ¯”: {deviation_pct:.2f}%\")\n",
        "print(f\"ç³»ç»Ÿå»ºè®®: {suggestion}\")\n"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "from sklearn.metrics import mean_squared_error, r2_score\n",
        "\n",
        "# æ¨¡å‹åœ¨è®­ç»ƒé›†ä¸Šçš„é¢„æµ‹\n",
        "y_pred = reg_model.predict(X)\n",
        "\n",
        "# RÂ²\n",
        "r2 = r2_score(y, y_pred)\n",
        "\n",
        "# è°ƒæ•´åçš„ RÂ²\n",
        "n = X.shape[0]\n",
        "k = X.shape[1]\n",
        "adj_r2 = 1 - (1 - r2) * (n - 1) / (n - k - 1)\n",
        "\n",
        "# å‡æ–¹è¯¯å·® (MSE)\n",
        "mse = mean_squared_error(y, y_pred)\n",
        "rmse = np.sqrt(mse)\n",
        "\n",
        "# æ®‹å·®æ ‡å‡†å·®\n",
        "residuals = y - y_pred\n",
        "residual_std = np.std(residuals.values)\n",
        "\n",
        "# å›å½’ç³»æ•°\n",
        "coefficients = pd.Series(reg_model.coef_.ravel(), index=X.columns)\n",
        "\n",
        "\n",
        "# æˆªè·\n",
        "intercept = reg_model.intercept_.item()\n",
        "\n",
        "# æ‰“å°æ¨¡å‹è¯„ä¼°ç»“æœ\n",
        "print(\"ğŸ“Š å›å½’æ¨¡å‹è¯„ä¼°ç»“æœï¼š\")\n",
        "print(f\"RÂ²: {r2:.4f}\")\n",
        "print(f\"è°ƒæ•´åçš„ RÂ²: {adj_r2:.4f}\")\n",
        "print(f\"å‡æ–¹è¯¯å·® (MSE): {mse:.2f}\")\n",
        "print(f\"RMSE: {rmse:.2f}\")\n",
        "print(f\"æ®‹å·®æ ‡å‡†å·®: {residual_std:.2f}\")\n",
        "print(f\"æˆªè·: {intercept:.2f}\")\n",
        "print(\"å›å½’ç³»æ•°:\")\n",
        "print(coefficients)\n"
